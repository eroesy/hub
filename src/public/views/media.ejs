<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>elter-hub</title>
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <div class="container">
        <!-- inicio -->
        <!-- inicio -->
        <div class="navbar">
            <div class="logo">
                <h1><a href="/media" style="color: white;">ELTER-HUB</a></h1>
            </div>
        </div>

        <nav class="menu">
            <div class="resto">
                <div class="icons">
                    <div id="img1" class="bi bi-house" style="color: white;"></div>
                    <div id="img2" class="bi bi-images" style="color: white;"></div> 
                </div>

                <div class="texts" style="display: none;">
                    <div><a href="/" id="txt1" style="color: white; font-size: 16px; font-weight: bold;">HOME</a></div>
                    <div><a href="/media" id="txt2" style="color: white; font-size: 16px; font-weight: bold;">MEDIA</a></div>
                </div>    
            </div>
        </nav>

        <!-- conteudo -->
        <div class="images">
            <% images.map((img, id) => { %>
                <% const is_mp4 = img.format == "mp4"; %>
                <% if (is_mp4) { %>
                    <div class="content">
                        <h1 style="font-size: 12px; color:rgb(0, 0, 0); cursor: pointer;" onclick="redirect(event)" id="post_<%- img._id %>"><%- img.name %></h1>
                        <video src="data:video/mp4;base64, <%- img.data %>" alt="<%- img.name %>" controls=""></video>
                    </div>      
                <% } else { %>
                    <div class="content">
                        <h1 style="font-size: 12px; color:rgb(0, 0, 0); cursor: pointer;" onclick="redirect(event)" id="post_<%- img._id %>"><%- img.name %></h1>
                        <img src="data:image/png;base64, <%- img.data %>" alt="<%- img.name %>"></img>
                    </div>       
                <% } %>
            <% }) %>
        </div>

    </div>

    <script src="js/media.js"></script>
</body>
</html>